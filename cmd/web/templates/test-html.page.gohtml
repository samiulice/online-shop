{{define "body"}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Password Reset</title>
</head>
<body style="font-family: Arial, sans-serif;">

    <table style="max-width: 600px; margin: 0 auto; padding: 20px; border-collapse: collapse; width: 100%;">
        <tr>
            <td style="padding: 10px; text-align: center;">
                <h2 style="color: #193750;">Password Reset</h2>
                <hr style="border: none; border-top: 1px solid #ccc; margin: 20px 0;">
            </td>
        </tr>
        <tr>
            <td style="padding: 10px;">
                <p>Dear User,</p>
                <p>We received a request to reset your account password. To proceed with the reset, please click the button below:</p>
                <p style="text-align: center; margin-top: 20px;">
                    <a href="{{.Link}}" style="background-color: #0e65c9; color: #fff; padding: 8px 16px; text-decoration: none; border-radius: 5px; display: inline-block;">Reset Password</a>
                </p>
                <p>If you didn't request this password reset, you can safely ignore this email. Your account is secure.</p>
                <p>Thank you,</p>
                <p>Your Company Name</p>
            </td>
        </tr>
        <tr>
            <td style="padding: 5px; text-align: center; height: 40px;">
                <p>&copy; 2024 Your Company. All rights reserved.</p>
                <p>
                    <a href="https://facebook.com/YourCompany" style="color: #fff; text-decoration: none; margin-right: 10px;">
                        <img src="/public/assets/icons/square-facebook.svg" alt="Facebook" width="24" height="24">
                    </a>
                    <a href="https://twitter.com/YourCompany" style="color: #fff; text-decoration: none; margin-right: 10px;">
                        <img src="/public/assets/icons/square-x-twitter.svg" alt="Twitter" width="24" height="24">
                    </a>
                    <a href="https://linkedin.com/company/YourCompany" style="color: #fff; text-decoration: none; margin-right: 10px;">
                        <img src="/public/assets/icons/square-instagram.svg" alt="LinkedIn" width="24" height="24">
                    </a>
                    <a href="https://linkedin.com/company/YourCompany" style="color: #fff; text-decoration: none;">
                        <img src="/public/assets/icons/linkedin.svg" alt="LinkedIn" width="24" height="24">
                    </a>
                </p>
            </td>
        </tr>
    </table>

</body>
</html>
{{end}}